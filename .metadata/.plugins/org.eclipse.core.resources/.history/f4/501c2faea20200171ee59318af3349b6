import lejos.nxt.*;
import lejos.robotics.subsumption.*;

public class darkSensorMovement implements Behavior
{
	LightSensor ls;
	private boolean suppressed;
	
	public darkSensorMovement(SensorPort port)
	{
		ls = new LightSensor(port);
	}
	
	@Override
	public boolean takeControl() 
	{
		if(ls.getLightValue() < 30)
		{
			return true;
		}
		
		return false;
	}

	@Override
	public void action() 
	{
		suppressed = false;
	}

	@Override
	public void suppress() 
	{
		suppressed = true;
	}
}
