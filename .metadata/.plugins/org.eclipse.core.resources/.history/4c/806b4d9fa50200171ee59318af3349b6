import lejos.nxt.*;
import lejos.robotics.subsumption.*;

public class darkSensorMove implements Behavior
{
	LightSensor ls;
	TouchSensor ts;
	
	private boolean suppressed;
	
	public darkSensorMove(SensorPort port1, SensorPort port2)
	{
		ls = new LightSensor(port1);
		ts = new TouchSensor(port2);
	}
	
	@Override
	public boolean takeControl() 
	{
		if(ls.getLightValue() < 20)
		{
			return true;
		}
		
		return false;
	}

	@Override
	public void action() 
	{
		suppressed = true;
		
	}

	@Override
	public void suppress() 
	{
		suppressed = true;
	}

}
